<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mapRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Map Container -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Modern Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/search_bar_background"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="12dp"
            app:tint="#666666" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Attractions"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburg, Germany"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/btnClearSearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            app:tint="#666666" />
    </LinearLayout>

    <!-- Search Suggestions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/suggestions_background"
        android:visibility="gone"
        android:elevation="8dp" />

    <!-- Zoom controls -->
    <LinearLayout
        android:id="@+id/zoomControls"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="90dp"
        android:gravity="end"
        android:layout_gravity="top|end">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_search"
            app:tint="@color/black"
            android:contentDescription="Zoom In" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_zoom_out_24"
            app:tint="@color/black"
            android:contentDescription="Zoom Out"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Location Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/ic_my_location"
        android:backgroundTint="#FFFFFF"
        android:tint="#333333"
        android:elevation="8dp" />

    <!-- Attractions Carousel -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAttractions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        android:orientation="horizontal" />

    <!-- Route Info Panel (Hidden by default) -->
    <LinearLayout
        android:id="@+id/routePanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:background="@drawable/route_panel_background"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tvRouteInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No route selected"
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnClearRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Route"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.Button.TextButton" />
    </LinearLayout>

</FrameLayout>