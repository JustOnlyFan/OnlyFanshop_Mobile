<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/routePanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="12dp"
            android:background="#AA000000"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvRouteInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có route"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnClearRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xoá route" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/searchBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:background="#CCFFFFFF"
        android:elevation="6dp">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Tìm địa điểm..."/>

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Search"
            android:src="@android:drawable/ic_menu_search"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvSuggestions"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="70dp"
        android:background="#FFFFFFFF"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/apiKeyPanel"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:background="#EEFFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:text="API KEYS"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etOpenCageKey"
                android:hint="OpenCage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etGeoapifyKey"
                android:hint="Geoapify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etLocationIqKey"
                android:hint="LocationIQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etOrsKey"
                android:hint="ORS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etGraphHopperKey"
                android:hint="GraphHopper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnApplyKeys"
                android:text="Áp dụng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btnToggleKeyPanel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:layout_gravity="end|bottom"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_manage"
        android:contentDescription="Keys"/>

</FrameLayout>