<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card"
    android:padding="12dp"
    android:layout_marginVertical="6dp"
    android:gravity="center_vertical">

    <!-- Cột thông tin đơn hàng -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đơn: #123"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt: 2025-10-19"
            android:textSize="14sp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán: VNPay"
            android:textSize="14sp"
            android:textColor="#444" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng: 1.250.000₫"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#D32F2F" />
    </LinearLayout>

    <!-- Cột bên phải chứa trạng thái và nút -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- Hàng chứa mũi tên và trạng thái -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnPrevStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Trạng thái trước"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pending"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_status_pending" />

            <ImageView
                android:id="@+id/btnNextStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Trạng thái tiếp theo"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/gray" />
        </LinearLayout>

        <Button
            android:id="@+id/btnViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E88E5"
            android:paddingHorizontal="18dp"
            android:paddingVertical="8dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
