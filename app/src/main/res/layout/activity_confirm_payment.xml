<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cart.CartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RadioGroup
                    android:id="@+id/radioAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/radioBtnDfAd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Địa chỉ  mặc định" />

                    <TextView
                        android:id="@+id/textViewDfAd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DefaultAddress"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/edtDefaultAddress"
                        app:layout_constraintEnd_toEndOf="@+id/edtDefaultAddress"
                        app:layout_constraintStart_toStartOf="@+id/edtDefaultAddress"
                        app:layout_constraintTop_toTopOf="@+id/edtDefaultAddress" />

                    <EditText
                        android:id="@+id/edtDefaultAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:hint="Địa chỉ mặc định"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/radioAddress"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioButton
                        android:id="@+id/radioBtnOtherAd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ khác" />

                    <TextView
                        android:id="@+id/textViewOtherAd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other Address"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/edtOtherAddress"
                        app:layout_constraintEnd_toEndOf="@+id/edtOtherAddress"
                        app:layout_constraintStart_toStartOf="@+id/edtOtherAddress"
                        app:layout_constraintTop_toTopOf="@+id/edtOtherAddress" />

                    <EditText
                        android:id="@+id/edtOtherAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Địa chỉ khác"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@id/edtDefaultAddress"
                        app:layout_constraintStart_toStartOf="@+id/edtDefaultAddress"
                        app:layout_constraintTop_toBottomOf="@+id/edtDefaultAddress" />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcl_view_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="50dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="@string/total"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="@string/_0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:text="Hủy thanh toán" />

                <Button
                    android:id="@+id/checkoutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:text="@string/checkOut" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>