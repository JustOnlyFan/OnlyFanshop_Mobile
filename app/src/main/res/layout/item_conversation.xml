<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="@dimen/chat_item_padding">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/chat_item_avatar"
        android:layout_height="@dimen/chat_item_avatar"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_profile"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_avatar_circle"
        android:contentDescription="avatar" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAvatar"
        android:layout_toEndOf="@id/imgAvatar"
        android:layout_alignTop="@id/imgAvatar"
        android:layout_marginLeft="@dimen/chat_item_padding"
        android:layout_marginStart="@dimen/chat_item_padding"
        android:textStyle="bold"
        android:textSize="@dimen/chat_name_text" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_toRightOf="@id/imgAvatar"
        android:layout_toEndOf="@id/imgAvatar"
        android:layout_marginLeft="@dimen/chat_item_padding"
        android:layout_marginStart="@dimen/chat_item_padding"
        android:layout_marginTop="4dp"
        android:textColor="#666666"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@id/tvLastMessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_chat"/>

</RelativeLayout>


