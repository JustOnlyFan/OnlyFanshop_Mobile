<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="BottomSheetTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <!-- Màu nền -->
        <item name="android:background">@android:color/white</item>

        <!-- Bo góc trên -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.BottomSheet</item>

        <!-- Nếu muốn cho nó full width -->
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="ShapeAppearance.BottomSheet" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">#FF6B35</item>
        <item name="android:secondaryProgressTint">#FFE0B2</item>
    </style>

</resources>